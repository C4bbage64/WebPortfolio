<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Muhammad Irfan Deni</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="text-gray-900">
    <div class="min-h-screen bg-gray-100 flex flex-col">

        <!-- Header -->
        <header class="bg-white shadow">
            <nav class="container mx-auto flex justify-between items-center p-4">
                <div class="text-xl font-bold">Muhammad Irfan Deni</div>
                <div class="space-x-4 text-sm">
                    <a href="/" class="hover:underline">Home</a>
                    <a href="/Projects" class="hover:underline">Projects</a>
                    <a href="/Certifications" class="hover:underline">Certifications</a>
                    <a href="/Contact" class="hover:underline">Contact</a>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="container mx-auto p-6 flex-grow">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="text-center text-sm text-gray-500 py-4 border-t">
            © @DateTime.Now.Year - Muhammad Irfan Deni. All rights reserved.
        </footer>
    </div>
</body>
</html>